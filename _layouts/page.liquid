---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <style>
    .red-section-heading {
      font-size: 1.6rem;
      margin: 2rem 0 1rem;
      color: var(--global-theme-color);
      text-align: left;
      font-weight: 600;
      letter-spacing: 0.5px;
    }
    /* Hide any group headers and years inside related publications */
    .publications h2.bibliography { display: none; }
    .publications li .year, .publications li .date { display: none; }
    </style>
    <h3 class="red-section-heading">Related Publications:</h3>
    <div class="publications">
      {% bibliography --cited --order descending --sort_by year --group_by none %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}

  <!-- Social icons at bottom of page -->
  <div class="social">
    <div class="contact-icons">{% include social.liquid %}</div>
    {% if site.contact_note %}
      <div class="contact-note">{{ site.contact_note }}</div>
    {% endif %}
  </div>
</div>
